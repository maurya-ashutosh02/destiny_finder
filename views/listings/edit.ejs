<% layout("/layouts/boilerplate.ejs")%>

    <div class="container mt-4 mb-4">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-lg p-4 rounded">
                    <h3 class="text-center text-primary fw-bold">Edit Your Listing</h3>
                    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate
                        class="needs-validation" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label for="title" class="form-label fw-semibold">Title</label>
                            <input name="listing[title]" value="<%=listing.title%>" type="text"
                                class="form-control border-primary" required>
                            <div class="valid-feedback">Title looks good!</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label fw-semibold">Description</label>
                            <textarea name="listing[description]" class="form-control border-primary" rows="3"
                                required><%=listing.description%></textarea>
                            <div class="invalid-feedback">Please provide a description.</div>
                        </div>


                        <div class="mb-3">
                            Current Listing Image
                            <img src="<%=originalImageUrl%>" class="form-control border-primary">
                        </div>


                        <div class="mb-3">
                            <label for="image" class="form-label fw-semibold">Upload New Image</label>
                            <input name="listing[image]" type="file" class="form-control border-primary" >

                        </div>

                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="price" class="form-label fw-semibold">Price</label>
                                <input name="listing[price]" value="<%=listing.price%>" type="number"
                                    class="form-control border-primary" required>
                                <div class="invalid-feedback">Enter a valid price.</div>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label for="country" class="form-label fw-semibold">Country</label>
                                <input name="listing[country]" value="<%=listing.country%>" type="text"
                                    class="form-control border-primary" required>
                                <div class="invalid-feedback">Enter a country name.</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label fw-semibold">Location</label>
                            <input name="listing[location]" value="<%=listing.location%>" type="text"
                                class="form-control border-primary" required>
                            <div class="invalid-feedback">Enter a location.</div>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Select Category</label>
                            <select name="listing[category]" id="category" class="form-control" required>
                                <option value="Hotels" <%= listing && listing.category === "Hotels" ? "selected" : "" %>>Hotels</option>
                                <option value="Mountain" <%= listing && listing.category === "Mountain" ? "selected" : "" %>>Mountain</option>
                                <option value="Castles" <%= listing && listing.category === "Castles" ? "selected" : "" %>>Castles</option>
                                <option value="Pools" <%= listing && listing.category === "Pools" ? "selected" : "" %>>Swimming Pools</option>
                                <option value="Beach" <%= listing && listing.category === "Beach" ? "selected" : "" %>>Beach</option>
                                <option value="Snow" <%= listing && listing.category === "Snow" ? "selected" : "" %>>Snow</option>
                                <option value="Camping" <%= listing && listing.category === "Camping" ? "selected" : "" %>>Camping</option>
                                <option value="Other" <%= listing && listing.category === "Other" ? "selected" : "" %>>Other</option>
                            </select>
                        </div>
                        
                        <div class="text-center">
                            <button class="btn btn-primary w-100 fw-bold py-2 mt-3">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>